    "custom/disk-root": {
        "format": "{icon} {}",
        // "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "default": ""
        },
        "escape": true,
        "exec": "df -h | grep '/$' | awk '{print $4}' > /dev/null" 
    },

// "custom/disk-home": {
//         "format": "{icon} {}",
//         "return-type": "string",
//         "max-length": 40,
//         "format-icons": {
//             "default": ""
//         },
//         "escape": true,
//         "exec": "$HOME/Desktop/Hyprland/waybar/script/disk-home.sh > /dev/null" 
//     },

    "custom/disk-home": {
        "format": "{icon} {}",
        "exec": "df -h | grep '/home$' | awk '{print $4}' > /dev/null",
        // "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
        "return-type": "json",
        "interval": 5
    },

"custom/lock": {
    "format": "{icon} {}",
    "return-type": "string",
    "max-length": 40,
    "format-icons": {
        "default": ""
    },
    "escape": true,
    "exec": "$HOME/Desktop/Hyprland/waybar/script/disk-home.sh > /dev/null" 
},

    "custom/vpn": {
        "format": "VPN ",
        "exec": "echo '{\"class\": \"connected\"}'",
        // "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
        "return-type": "json",
        "interval": 5
    },

    "custom/dunst": {
        "exec": "~/.config/waybar/scripts/dunst.sh",
        "on-click": "dunstctl set-paused toggle",
        "restart-interval": 1
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "default": "🎜"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
